<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ns.me.ns.furaffinity.ui.adapter.recycler.ImageGalleryAdapter.ViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:enabled="@{viewModel.link != null}"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{viewModel.getOnItemSelected}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:loadImg="@{viewModel.src}"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/blackTransparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingEnd="@dimen/material_padding"
            android:paddingStart="@dimen/material_padding"
            android:text="@{viewModel.title}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/material_text_list_primary" />

    </LinearLayout>

</layout>