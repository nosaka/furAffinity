<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ns.me.ns.furaffinity.ui.adapter.recycler.FavoriteAdapter.ContentsViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{viewModel.onItemSelected}">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:minHeight="240dp"
            android:scaleType="centerCrop"
            app:loadImg="@{viewModel.imageData}"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/closeImageView"
            android:onClick="@{viewModel.onCloseClick}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/selector_close" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/imageView"
            android:background="@color/blackTransparent"
            android:ellipsize="end"
            android:lines="1"
            android:paddingEnd="@dimen/material_padding"
            android:paddingStart="@dimen/material_padding"
            android:text="@{viewModel.alt}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/material_text_list_primary" />

    </RelativeLayout>

</layout>